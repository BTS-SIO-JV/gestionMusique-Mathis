{% extends 'base.html.twig' %}

{% block title %}Liste des Albums{% endblock %}

{% block body %}
<h1 class="pt-2 text-center">Albums</h1>
<hr>

<div class="row pt-2">
{% for leAlbum in lesAlbums %}
    <div class="col-sm-12 col-md-12 col-lg-4 col-xl-4">
        <div class="card mb-3">
            <h3 class="card-header">{{leAlbum.nom}}</h3>
            <div class="card-body">
                <h5 class="card-title">
                <a href="" class="badge badge-success">{{leAlbum.artiste.nom}}</a>
                </h5>
            </div>
            <img class="avatar mx-auto d-block " style="height: auto; width : 200px; display: block;" src="{{leAlbum.image}}" alt"Card image">
            <div class="card-body">
            {% for leStyle in leAlbum.styles %}
                <p class="card-text">{{leStyle.nom}}</p>
            {% endfor %}
            <div class="card-body">
                 <p class="card-text">{{leAlbum.morceaux|length}}</p>
            </div>

            </div>
            
        </div>
    </div>
{% endfor %}
</div>

{% endblock %}
